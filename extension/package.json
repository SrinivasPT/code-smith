{
	"name": "codesmith",
	"displayName": "CodeSmith",
	"description": "Refine Jira stories into code plans and implementations",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:codesmith.open"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "codesmith.open",
				"title": "Open CodeSmith"
			}
		]
	},
	"scripts": {
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^24.5.0",
		"@types/vscode": "^1.85.0",
		"typescript": "^5.0.0"
	}
}
